<% content_for :page_header do %>
  <div class="page-header">
    <h1 class="page-header-title">New condition report</h1>
    <h4 class="page-header-address">555 St kilda rd</h4>
  </div>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
      20%
    </div>
  </div>
<% end %>
<!--  -->
<div class="container">
  <div class="row">
    <div class="comment_form">
    <h1 class="text-center"> NEW COMMENT </h1>
      <%= simple_form_for([@room_element, @comment]) do |f| %>
        <%= f.input :text_comment, placeholder: "Type your comment here..." %>
          <small id="commentHelpBlock" class="form-text text-muted">
            Add your comment here, include as much detail as possible.
          </small>
        <%= f.input :state, as: :check_boxes, collection: %w[Clean Working Undamaged], item_wrapper_class: 'inline' %>
          <i class="fas fa-camera">
            <%= f.input :photo, placeholder: "Please upload photo", input_html: {accept:"image/*;capture=camera"} %>
            <%= f.input :photo_cache, as: :hidden %>
          </i>
        <%= f.button :submit, "Submit comment", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
