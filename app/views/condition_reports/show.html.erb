<!-- show.html.erb -->
<% content_for :page_header do %>
  <div class="page-header">
    <h1 class="page-header-title">New condition report</h1>
    <h4 class="page-header-address">555 St kilda rd</h4>
  </div>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
      20%
    </div>
  </div>
<% end %>
<!--  -->
<div class="container">
  <div class="room">
    <div class="row">

      <div class="col-md-10">
        <% @rooms.each do |room| %>
          <h3><%= room.name %></h3>
          <div class="panel">
            <div class="panel-body">
              <% room.room_elements.each do |element| %>
                <h4> <%= element.name %> </h4>

                  <div class = "approvals">
                    <%= simple_form_for ([element, @room_element_approval]) do |f| %>
                      <%= f.input :condition_report_id, as: :hidden%>
                      <%= f.input :tenant_approval %>
                      <%= f.input :owner_approval %>
                    <% end %>
                  </div>

              Comments ðŸ’¬
                <% element.comments.each do |comment| %>
                  <div>
                    <%= comment.text_comment %>
                    <%= comment.state %>
                   <%= render partial: "shared/lightbox_image", locals: {photo: comment.photo} %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class= "text-center">
        <p> <%= link_to "Confirm", condition_reports_path(@conditionreport), class: "btn btn-primary" %></p>
        <p>

          <i class="fas fa-paperclip"><%= link_to "Download your PDF", "#{condition_report_path(@conditionreport)}.pdf", target: "_blank"  %>

          </i>
        </p>
      </div>

    </div>
  </div>
</div>
