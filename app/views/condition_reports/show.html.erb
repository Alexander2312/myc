<!-- show.html.erb -->
<div class="container">
  <div class="room">
    <div class="row">

      <div class="col-md-10">
        <% @rooms.each do |room| %>
          <h3><%= room.name %></h3>
          <div class="panel">
            <div class="panel-body">
              <% room.room_elements.each do |element| %>
                <h4> <%= element.name %> </h4>

                  <div class = "approvals">
                    <%= simple_form_for ([element, @room_element_approval]) do |f| %>
                      <%= f.input :condition_report_id, as: :hidden%>
                      <%= f.input :tenant_approval %>
                      <%= f.input :owner_approval %>
                    <% end %>
                  </div>

              Comments ðŸ’¬
                <% element.comments.each do |comment| %>
                  <div>
                    <%= comment.text_comment %>
                    <%= comment.state %>
                   <%= render partial: "shared/lightbox_image", locals: {photo: comment.photo} %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class= "text-center">
        <p> <%= link_to "Confirm", condition_reports_path(@conditionreport), class: "btn btn-primary" %></p>
        <p>
          <i class="fas fa-paperclip"><%= link_to "Download your PDF", "#{condition_reports_path(@conditionreport)}.pdf"  %>
          </i>
        </p>
      </div>

    </div>
  </div>
</div>
