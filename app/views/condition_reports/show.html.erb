<!-- show.html.erb -->
<% content_for :page_header do %>
  <div class="page-header">
    <h1 class="page-header-title">New condition report</h1>
    <h4 class="page-header-address">555 St kilda rd</h4>
  </div>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
      20%
    </div>
  </div>
<% end %>
<!--  -->
<div class="container">
  <div class="room">
    <div class="row">

      <div class="col-md-10">
        <% @rooms.each do |room| %>
          <h3><%= room.name %></h3>
          <div class="panel">
            <div class="panel-body">
              <% room.room_elements.each do |element| %>
                <h4> <%= element.name %> </h4>

              Comments ðŸ’¬
                <% element.comments.each do |comment| %>
                  <div>
                    <%= comment.text_comment %>
                    <%= comment.state %>
                   <%= render partial: "shared/lightbox_image", locals: {photo: comment.photo} %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="action-bar">

        <%= link_to "Confirm", confirmation_url, class: "btn btn-primary action-bar-button"%>

        
         <div class="action-bar-light-part"></div>
      </div>
      </div>
    </div>
  </div>
</div>

