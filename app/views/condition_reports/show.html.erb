<div class="show">
  <% @rooms.each do |room| %>
    <h2 class="heading"><%= room.name %></h2>
    <% room.room_elements.each do |element| %>

      <div class="card">
        <div class=" card-header">
          <p class="sub-heading"><%= element.name %></p>
        </div>
        <div class="card-inner">
          <div class="card-body">
            <div class="comments">
                <h2 class="comments-title">Comments</h2>
                <% if (element.comments.count == 0) %>
                  No comments yet.
                <% end %>
                <% element.comments.each do |comment| %>
                  <div class="comment">
                    <div class="text-comment">
                      <p><%= comment.text_comment %></p>
                    </div>
                  <ul class="state tags">
                    <% if comment.state? %>
                      <% comment.state.split.each do |state| %>
                        <li class="tag">
                          <span><%= state %></span>
                        </li>
                      <% end %>
                    <% else %>
                      <li class="tag">
                        <span>No-State</span>
                      </li>
                    <% end %>
                  </ul>

                  <% if comment.photo? %>
                    <div class="comment-image">
                      <a href="<%= cl_image_path comment.photo, crop: :fill %>" class="swipebox" title= "<%= element.name %>" >
                        <%= cl_image_tag comment.photo, height: 80, width: 110, crop: :fill, class:"pop imagepreview"%>
                      </a>
                    </div>
                    <% end %>
                </div>
            <% end %>
            </div>
          </div>
          <div class="card-footer">
          </div>
        </div>
      </div>

    <% end %>
  <% end %>
</div>
<div class="action-bar">
<%= link_to "Confirm", confirmation_path(@conditionreport), class: "btn btn-primary action-bar-button"%>
</div>
