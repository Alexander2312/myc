<% content_for :page_header do %>
  <div class="page-header">
    <h1 class="page-header-title">Condition Report</h1>
    <h4 class="page-header-address">Level 1, 41-43 Stewart St, Richmond, VIC 3121, Australia</h4>
  </div>
