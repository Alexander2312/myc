    <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
      20%
    </div> -->
  <!-- </div> -->
<% end %>


<!--  -->
<div class="container">
  <div class="room">
    <div class="row">
      <div class="col-md-12">
        <% @rooms.each do |room| %>
          <h3><%= room.name %></h3>
          <% room.room_elements.each do |element| %>
            <div class="panel">
              <div class="panel-heading">
                <h3 class="panel-title"><%= element.name %></h3>
              </div>
              <div class="panel-body">
                <%= link_to new_condition_report_comment_path(@conditionreport, room_element_id: element.id) do %>
                    <i class="fas fa-comment-dots" aria-hidden="true"></i>
                <% end %>

                <div class="approvals">
                  <%= simple_form_for ([element, @room_element_approval]) do |f| %>
                    <%= f.input :condition_report_id, as: :hidden%>
                    <%= f.input :tenant_approval %>
                  <% end %>
                </div>

                <% element.comments.each do |comment| %>
                  <div>
                    <%= comment.text_comment %>
                    <%= comment.state %>
                    <% if comment.photo? %>
                      <div class= "text-right"> <%= render partial: "shared/lightbox_image", locals: {photo: comment.photo}%>
                    <% else %>
                    <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="action-bar">
        <%= link_to "Preview", condition_report_path(@conditionreport), class: "btn btn-primary action-bar-button"%>
        <div class="action-bar-light-part"></div>
      </div>
      </div>
    </div>
  </div>
</div>


